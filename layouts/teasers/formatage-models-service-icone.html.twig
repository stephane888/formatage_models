{% if content %}
	<div{{attributes.addClass(['service-icone','space-padding'])}}>
		<div class="d-flex ">
			<div {{ region_attributes.icone.addClass(['icone']) }}>
				{{content.icone|layout_value}}
			</div>
			<div>
				<h4{{region_attributes.titre.addClass(['titre'])}}>{{ content.titre|layout_value }}</h4>
				<div{{region_attributes.description.addClass(['description'])}}>
					{{ content.description|layout_value }}
				</div>
			</div>
		</div>
	</div>
{% endif %}
